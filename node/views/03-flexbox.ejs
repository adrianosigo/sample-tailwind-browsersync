<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Construção de Layout</title>
    <link rel="stylesheet" href="css/styles.css">
</head>

<body>

    <!-- Flexbox -->
    <p class="text-lg">Flexbox</p>
    <div class="flex flex-row bg-red-300">
        <div class="bg-red-600 p-6 m-2">div 1</div>
        <div class="bg-red-600 p-6 m-2">div 2</div>
        <div class="bg-red-600 p-6 m-2">div 3</div>
    </div>
    <div class="flex flex-col bg-blue-300">
        <div class="bg-blue-600 p-6 m-2">div 1</div>
        <div class="bg-blue-600 p-6 m-2">div 2</div>
        <div class="bg-blue-600 p-6 m-2">div 3</div>
    </div>
    <div class="flex flex-row-reverse bg-green-300">
        <div class="bg-green-600 p-6 m-2">div 1</div>
        <div class="bg-green-600 p-6 m-2">div 2</div>
        <div class="bg-green-600 p-6 m-2">div 3</div>
    </div>
    <div class="flex flex-col-reverse bg-pink-300">
        <div class="bg-pink-600 p-6 m-2">div 1</div>
        <div class="bg-pink-600 p-6 m-2">div 2</div>
        <div class="bg-pink-600 p-6 m-2">div 3</div>
    </div>
    <!-- Flex Wrap -->
    <hr class="border-2 my-10">
    <p class="text-lg">Flex Wrap</p>
    <div class="flex flex-wrap bg-red-300">
        <div class="bg-red-600 p-6 m-2">div 1</div>
        <div class="bg-red-600 p-6 m-2">div 2</div>
        <div class="bg-red-600 p-6 m-2">div 3</div>
        <div class="bg-red-600 p-6 m-2">div 4</div>
        <div class="bg-red-600 p-6 m-2">div 5</div>
        <div class="bg-red-600 p-6 m-2">div 6</div>
        <div class="bg-red-600 p-6 m-2">div 7</div>
        <div class="bg-red-600 p-6 m-2">div 8</div>
        <div class="bg-red-600 p-6 m-2">div 9</div>
        <div class="bg-red-600 p-6 m-2">div 10</div>
        <div class="bg-red-600 p-6 m-2">div 11</div>
        <div class="bg-red-600 p-6 m-2">div 12</div>
    </div>
    <!-- Flex No Wrap -->
    <hr class="border-2 my-10">
    <p class="text-lg">Flex No Wrap</p>
    <div class="flex flex-nowrap bg-orange-300">
        <div class="bg-orange-600 p-6 m-2">div 1</div>
        <div class="bg-orange-600 p-6 m-2">div 2</div>
        <div class="bg-orange-600 p-6 m-2">div 3</div>
        <div class="bg-orange-600 p-6 m-2">div 4</div>
        <div class="bg-orange-600 p-6 m-2">div 5</div>
        <div class="bg-orange-600 p-6 m-2">div 6</div>
        <div class="bg-orange-600 p-6 m-2">div 7</div>
        <div class="bg-orange-600 p-6 m-2">div 8</div>
    </div>
    <hr class="border-2 my-10">
    <!-- Elementos com Flex -->
    <p class="text-lg">Elementos com Flex</p>
    <div class="flex bg-green-300">
        <div class="flex-1 bg-green-200 p-6 m-2">div 1</div>
        <div class="flex-1 bg-green-300 p-6 m-2">div 2</div>
        <div class="flex-1 bg-green-400 p-6 m-2">div 3</div>
        <div class="flex-1 bg-green-500 p-6 m-2">div 4</div>
        <div class="flex-1 bg-green-600 p-6 m-2">div 5</div>
        <div class="flex-none bg-green-700 p-6 m-2">div 6</div>
    </div>
    <!-- Flex com Order -->
    <hr class="border-2 my-10">
    <p class="text-lg">Flex com Order</p>
    <div class="flex flex-nowrap bg-purple-300">
        <div class="bg-purple-600 p-6 m-2 order-last">div 1</div>
        <div class="bg-purple-600 p-6 m-2 order-7">div 2</div>
        <div class="bg-purple-600 p-6 m-2 order-6">div 3</div>
        <div class="bg-purple-600 p-6 m-2 order-5">div 4</div>
        <div class="bg-purple-600 p-6 m-2 order-4">div 5</div>
        <div class="bg-purple-600 p-6 m-2 order-3">div 6</div>
        <div class="bg-purple-600 p-6 m-2 order-2">div 7</div>
        <div class="bg-purple-600 p-6 m-2 order-first">div 8</div>
    </div>
    <!-- Flex com Order para Telas Diferentes -->
    <hr class="border-2 my-10">
    <p class="text-lg">Flex com Order para Telas Diferentes</p>
    <div class="flex flex-nowrap bg-slate-300">
        <div class="bg-slate-100 p-6 m-2 md:order-1 lg:order-8">div 1</div>
        <div class="bg-slate-200 p-6 m-2 md:order-2 lg:order-7">div 2</div>
        <div class="bg-slate-300 p-6 m-2 md:order-3 lg:order-6">div 3</div>
        <div class="bg-slate-400 p-6 m-2 md:order-4 lg:order-5">div 4</div>
        <div class="bg-slate-500 p-6 m-2 md:order-5 lg:order-4">div 5</div>
        <div class="bg-slate-600 p-6 m-2 md:order-6 lg:order-3">div 6</div>
        <div class="bg-slate-700 p-6 m-2 md:order-7 lg:order-2">div 7</div>
        <div class="bg-slate-800 p-6 m-2 md:order-8 lg:order-1">div 8</div>
    </div>


</body>

</html>